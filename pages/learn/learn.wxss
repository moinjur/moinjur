.daily-tip {
  margin: 20rpx;
  padding: 30rpx;
  background: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.tip-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.tip-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.course-list {
  padding: 20rpx;
}

.course-item {
  background: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.course-cover {
  width: 100%;
  height: 300rpx;
}

.course-info {
  padding: 20rpx;
}

.course-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.course-progress {
  margin-top: 10rpx;
}

.progress-text {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
  display: block;
}