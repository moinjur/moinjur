<view class="container">
  <!-- 保持原有内容... -->

  <!-- AI分析建议 -->
  <view class="ai-analysis-section" wx:if="{{showAiAnalysis}}">
    <view class="section-title">
      <text>AI智能建议</text>
      <view class="ai-badge">AI</view>
    </view>
    
    <view class="ai-loading" wx:if="{{aiAnalyzing}}">
      <view class="ai-loading-icon"></view>
      <text class="ai-loading-text">AI正在分析您的需求...</text>
    </view>

    <view class="ai-suggestions" wx:else>
      <view class="ai-suggestion-item" 
            wx:for="{{aiSuggestions}}" 
            wx:key="type">
        <view class="ai-suggestion-header">
          <text class="ai-suggestion-type">{{item.type}}</text>
          <text class="ai-confidence">可信度: {{item.confidence * 100}}%</text>
        </view>
        <view class="ai-suggestion-content">{{item.content}}</view>
        <button class="adopt-btn" 
                bindtap="adoptAiSuggestion" 
                data-index="{{index}}">
          采纳建议
        </button>
      </view>
    </view>
  </view>

  <!-- 保持原有内容... -->
</view>