.container {
  padding: 20rpx;
}

.upload-section {
  width: 100%;
  margin-bottom: 40rpx;
}

.upload-area {
  width: 100%;
  height: 400rpx;
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
}

.upload-icon {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
}

.upload-text {
  font-size: 28rpx;
  color: #666;
}

.image-preview {
  width: 100%;
  height: 400rpx;
  border-radius: 20rpx;
  overflow: hidden;
}

.image-preview image {
  width: 100%;
  height: 100%;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 40rpx 0;
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #1aad19;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
  margin-top: 20rpx;
}

/* 图片内容分析样式 */
.image-analysis-section {
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.content-group {
  margin-bottom: 20rpx;
}

.content-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.content-tags {
  display: flex;
  flex-wrap: wrap;
}

.content-tag {
  background: #f5f5f5;
  color: #333;
  font-size: 26rpx;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.content-info {
  display: flex;
  flex-wrap: wrap;
  padding-top: 20rpx;
  border-top: 2rpx solid #f5f5f5;
}

.info-item {
  font-size: 26rpx;
  color: #666;
  margin-right: 30rpx;
}

.result-section {
  background: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.result-item {
  display: flex;
  margin-bottom: 10rpx;
}

.result-label {
  font-size: 28rpx;
  color: #666;
  width: 160rpx;
}

.result-value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  border-left: 8rpx solid #1aad19;
}

.suggestion-list {
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.suggestion-item {
  font-size: 28rpx;
  color: #333;
  padding: 10rpx 0;
  border-bottom: 2rpx solid #f5f5f5;
}

.suggestion-item:last-child {
  border-bottom: none;
}

.transportation-list {
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
}

.transportation-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.transportation-item:last-child {
  border-bottom: none;
}

.transport-type {
  width: 120rpx;
  height: 60rpx;
  background: #1aad19;
  color: #fff;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 30rpx;
  margin-right: 20rpx;
}

.transport-info {
  flex: 1;
}

.transport-route {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.transport-duration {
  font-size: 24rpx;
  color: #666;
}