/* 图片内容分析样式 */
.image-analysis-section {
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.content-group {
  margin-bottom: 20rpx;
}

.content-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.content-tags {
  display: flex;
  flex-wrap: wrap;
}

.content-tag {
  background: #f5f5f5;
  color: #333;
  font-size: 26rpx;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.content-info {
  display: flex;
  flex-wrap: wrap;
  padding-top: 20rpx;
  border-top: 2rpx solid #f5f5f5;
}

.info-item {
  font-size: 26rpx;
  color: #666;
  margin-right: 30rpx;
}

