<view class="container">
  <!-- 保持原有内容... -->

  <!-- 添加移除账号按钮 -->
  <view class="remove-account" wx:if="{{hasUserInfo && isPhoneVerified}}">
    <button class="remove-btn" bindtap="showRemoveAccount">移除账号</button>
  </view>

  <!-- 移除账号确认对话框 -->
  <view class="dialog-mask" wx:if="{{showRemoveAccountDialog}}">
    <view class="dialog-container">
      <view class="dialog-title">确认移除账号</view>
      <view class="dialog-content">移除账号后将清除所有本地数据，需要重新注册登录。是否继续？</view>
      <view class="dialog-buttons">
        <button class="dialog-btn cancel" bindtap="cancelRemoveAccount">取消</button>
        <button class="dialog-btn confirm" bindtap="confirmRemoveAccount">确认移除</button>
      </view>
    </view>
  </view>
</view>