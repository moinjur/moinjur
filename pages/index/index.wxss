/* 新增注册相关样式 */
.register-container {
  padding: 40rpx;
  text-align: center;
}

.register-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.register-subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 60rpx;
}

.register-options {
  width: 100%;
}

.register-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.register-btn.wechat {
  background: #1aad19;
  color: #fff;
}

.register-btn.manual {
  background: #fff;
  color: #333;
  border: 2rpx solid #ddd;
}

.register-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 10rpx;
}

.divider {
  display: flex;
  align-items: center;
  margin: 40rpx 0;
}

.divider .line {
  flex: 1;
  height: 2rpx;
  background: #eee;
}

.divider text {
  color: #999;
  padding: 0 20rpx;
}

.input-group {
  display: flex;
  margin-bottom: 20rpx;
}

.input-group input {
  flex: 1;
  height: 88rpx;
  border: 2rpx solid #ddd;
  border-radius: 44rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.verify-btn, .submit-btn {
  width: 200rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 28rpx;
  background: #1aad19;
  color: #fff;
}

.verify-btn[disabled] {
  background: #999;
}

/* 保持原有样式 */
.header {
  width: 100%;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.userinfo-mini {
  display: flex;
  align-items: center;
}

.userinfo-avatar-mini {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.userinfo-nickname-mini {
  font-size: 28rpx;
  color: #333;
}

.weather-info {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.temperature {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.humidity {
  font-size: 24rpx;
  color: #666;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  margin: 40rpx 0;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.auth-btn {
  background: #1aad19;
  color: #fff;
  font-size: 32rpx;
  padding: 20rpx 60rpx;
  border-radius: 40rpx;
  border: none;
  margin-top: 30rpx;
}

.auth-btn.loading {
  background: #999;
}

.daily-recommend {
  width: 100%;
  padding: 20rpx;
  margin-top: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  border-left: 8rpx solid #1aad19;
}

.recommend-list {
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
}

.recommend-item {
  margin-bottom: 20rpx;
}

.recommend-header {
  margin-bottom: 10rpx;
}

.recommend-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.recommend-desc {
  font-size: 24rpx;
  color: #666;
  margin-left: 10rpx;
}

.recommend-content {
  display: flex;
  flex-wrap: wrap;
}

.recommend-food {
  background: #f5f5f5;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #666;
  margin: 10rpx;
}

.weather-suggestions {
  width: 100%;
  padding: 20rpx;
  margin-top: 20rpx;
}

.suggestion-list {
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
}

.suggestion-item {
  margin-bottom: 20rpx;
}

.suggestion-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.suggestion-content {
  display: flex;
  flex-wrap: wrap;
}

.suggestion-text {
  background: #f5f5f5;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #666;
  margin: 10rpx;
}