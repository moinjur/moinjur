.container {
  height: 100vh;
  width: 100%;
  position: relative;
}

.map {
  width: 100%;
  height: 100%;
}

.map-controls {
  position: absolute;
  right: 20rpx;
  bottom: 40rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.control-btn {
  background: rgba(255, 255, 255, 0.9);
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  border-radius: 10rpx;
  border: none;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.auth-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.auth-box {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  width: 80%;
  max-width: 600rpx;
}

.auth-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 30rpx;
}

.auth-content {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
  text-align: center;
}

.auth-btn {
  background: #1aad19;
  color: #fff;
  font-size: 32rpx;
  margin-bottom: 20rpx;
  padding: 20rpx 0;
}

.auth-btn:last-child {
  margin-bottom: 0;
}

.userinfo-container {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  z-index: 100;
  background: rgba(255, 255, 255, 0.9);
  padding: 10rpx;
  border-radius: 10rpx;
}

.userinfo-mini {
  display: flex;
  align-items: center;
}

.userinfo-avatar-mini {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.userinfo-nickname-mini {
  font-size: 28rpx;
  color: #333;
}