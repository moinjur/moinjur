.container {
  height: 100vh;
  width: 100%;
  position: relative;
}

.map {
  width: 100%;
  height: 100%;
}

.userinfo-container {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  z-index: 100;
  background: rgba(255, 255, 255, 0.9);
  padding: 10rpx;
  border-radius: 10rpx;
}

.userinfo-mini {
  display: flex;
  align-items: center;
}

.userinfo-avatar-mini {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.userinfo-nickname-mini {
  font-size: 28rpx;
  color: #333;
}

/* 保留原有样式 */
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}