.header {
  width: 100%;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.userinfo-mini {
  display: flex;
  align-items: center;
}

.userinfo-avatar-mini {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.userinfo-nickname-mini {
  font-size: 28rpx;
  color: #333;
}

.weather-info {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.temperature {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.humidity {
  font-size: 24rpx;
  color: #666;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.phone-button {
  margin-top: 20rpx;
  background-color: #1aad19;
  color: #fff;
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  border-radius: 10rpx;
}

.phone-number {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #666;
}

.daily-recommend {
  width: 100%;
  padding: 20rpx;
  margin-top: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  border-left: 8rpx solid #1aad19;
}

.recommend-list {
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
}

.recommend-item {
  margin-bottom: 20rpx;
}

.recommend-header {
  margin-bottom: 10rpx;
}

.recommend-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.recommend-desc {
  font-size: 24rpx;
  color: #666;
  margin-left: 10rpx;
}

.recommend-content {
  display: flex;
  flex-wrap: wrap;
}

.recommend-food {
  background: #f5f5f5;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #666;
  margin: 10rpx;
}

.weather-suggestions {
  width: 100%;
  padding: 20rpx;
  margin-top: 20rpx;
}

.suggestion-list {
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
}

.suggestion-item {
  margin-bottom: 20rpx;
}

.suggestion-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.suggestion-content {
  display: flex;
  flex-wrap: wrap;
}

.suggestion-text {
  background: #f5f5f5;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #666;
  margin: 10rpx;
}